<div class="row">
    <h1>Articles</h1>
    <div class="article-container">
        {% for article in collections.article %}
            <div class="article">
                <div class="article-content">
                    <a href="{{ article.url }}">
                        <h2 class="as-h3">{{ article.data.title }}</h2>
                    </a>
                </div>
            </div>  
        {% endfor %}
    </div>
</div>